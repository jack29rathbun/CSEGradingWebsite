<% provide(:title, "Student Log In") %>

<h1>Student Log in</h1>
<%= form_with(url: login_path, scope: :session, local:true) do |f| %>
    <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", placeholder: "name.\#\@osu.edu" %>
    </div>
    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
    </div>

    <%= f.submit "Log in", class: "btn btn-danger btn-lg" %>
<% end %>
